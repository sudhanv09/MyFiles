content-background = #668bd7

[module/networkspeedup]
type = internal/network
interface = wlan0
label-connected = "%upspeed:7%"
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #fefefe
format-connected-foreground = #fefefe
format-connected-background = #8d62a9

[module/networkspeeddown]
type = internal/network
interface = wlan0
label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "  "
format-connected-prefix-foreground = #fefefe
format-connected-foreground = #fefefe
format-connected-background = #8d62ad

[module/date]
type = internal/date
; Seconds to sleep between updates
interval = 5
date = " %a %b %d"
date-alt = " %a %b %d"
time = %l:%M %p
time-alt = %l:%M%p
format-prefix = "  "
format-prefix-foreground = #fefefe
format-foreground = #fefefe
format-background = #668bd7
label = "%date% %time% "

[module/kdeconnect]  
type = custom/script  
exec = "~/.config/polybar/scripts/kdeconnect.sh -d"  
format-prefix-foreground = #fefefe
format-foreground = #fefefe
format-background = #668bd7
tail = true

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = "   %essid% "
label-connected-foreground = #fefefe
label-connected-background = #8d62ad
label-disconnected = 
label-disconnected-foreground = #fefefe
label-disconnected-background = #8d62ad

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = " %percentage%% "
label-discharging = " %percentage%% "
label-full = Fully charged

format-charging-foreground = #fefefe
format-charging-background = #668bd7

format-discharging-foreground = #fefefe
format-discharging-background = #668bd7


; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
